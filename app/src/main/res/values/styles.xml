<resources>

    <style name="Control"/>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#710c68</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyEditText" parent="Control">
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:layout_below">@id/llll</item>
        <item name="android:hint">@string/sousuokuang</item>
    </style>

    <style name="MyImageView" parent="Control">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyTextView" parent="Control">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyLinearLayout" parent="Control">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">120dp</item>
        <item name="android:layout_marginLeft">80dp</item>
    </style>

    <style name="MymkfImg" parent="Control">
        <item name="android:onClick">onRecognise</item>
        <item name="android:layout_marginTop">202dp</item>
        <item name="android:background">@drawable/mkf</item>
        <item name="android:layout_alignRight">@id/edittext</item>
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_marginRight">45dp</item>
        <item name="android:layout_height">26dp</item>
    </style>

    <style name="MySettingimg" parent="Control">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/setting</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>


    <style name="MyShareImg" parent="Control">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/share</item>
